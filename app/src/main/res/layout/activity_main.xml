<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Date Picker -->
    <TextView
        android:id="@+id/datePickerLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select a Date"
        android:background="?attr/selectableItemBackground"
        android:padding="16dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Fetch Button -->
    <Button
        android:id="@+id/fetchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fetch Image"
        android:layout_marginBottom="16dp" />

    <!-- Image Title -->
    <TextView
        android:id="@+id/imageTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image Title"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="16sp" />

    <!-- HD URL -->
    <TextView
        android:id="@+id/hdUrlTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HD Image URL"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="14sp"
        android:autoLink="web" />

    <!-- Image View -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp" />

    <!-- Save Button -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Image"
        android:layout_marginBottom="16dp" />

    <!-- View Saved Images Button -->
    <Button
        android:id="@+id/viewSavedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Saved Images" />
</LinearLayout>